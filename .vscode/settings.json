{

	"[markdown]": {
		"editor.fontSize": 14,
		"editor.lineHeight": 26,
		"editor.wordWrap": "wordWrapColumn",
		"editor.wordWrapColumn": 64,
		"editor.lineNumbers": "off",
		"editor.quickSuggestions": {
			"comments": "off",
			"strings": "off",
			"other": "off"
		},
		"editor.minimap.enabled": false
	},
	"angular.forceStrictTemplates": true,
	"grammarly.selectors": [
		{
			"language": "markdown",
			"scheme": "file",
			"pattern": "src/content/blog/real-time-openai-response-streaming-node-js.md"
		}
	]
}